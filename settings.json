{
  "chat": {
    "typingAnimation": {
      "enabled": true,
      "wordsPerMinute": 1500,
      "minTypingTime": 1200,
      "maxTypingTime": 15000,
      "variancePercentage": 15,
      "typingAppliesTo": "both"
    },
    "readDelay": {
      "enabled": true,
      "wordsPerMinute": 3000,
      "minReadTime": 300,
      "maxReadTime": 15000,
      "variancePercentage": 20
    },
    "timeEffects": {
      "transitionDelay": 2,
      "easing": "cubic-bezier(0.19, 1, 0.22, 1)"
    }
  },
  "logging": {
    "mode": "debug",
    "levels": {
      "production": ["warning", "error", "critical"],
      "debug": ["debug", "info", "warning", "error", "critical"]
    }
  },
  "theme": {
    "accentA": "#192b91",
    "accentB": "#ffc400",
    "accentC": "#e34234",
    "accentD": "#8a16c1",
    "accentE": "#3ecb75",
    "accentF": "#d83790",
    "accentG": "#00a5b3",
    "accentH": "#ff7e27",
    "accentI": "#6b5ca5",
    "accentJ": "#2ecc71",
    "accentK": "#e84c8b",
    "accentL": "#587d9f",
    "genericAccent": "#909090"
  },
  "directory": {
    "recursiveStyling": {
      "base": {
        "borderWidth": 0.125,
        "borderRadius": 0.375,
        "verticalPadding": 0.5,
        "horizontalPadding": 0.5,
        "marginBottom": 0.5,
        "fontSize": 1
      },
      "scale": {
        "borderWidth": 0.9,
        "borderRadius": 0.85,
        "spacing": 0.9,
        "fontSize": 0.95
      }
    },
    "spans": {
      "enabled": true,
      "maxTags": 15,
      "wikiTagsRatio": 0.6,
      "codeTagsRatio": 0.4,
      "minCount": 1,
      "showCounts": true
    }
  }
} 